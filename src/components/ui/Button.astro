---
// Button.astro
interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { 
  href, 
  variant = 'primary', 
  size = 'md', 
  class: className 
} = Astro.props;

// Padr√µes de Estilo
const baseStyles = "inline-flex items-center justify-center font-title font-bold transition-all duration-300 rounded-full active:scale-95";

const variants = {
  primary: "bg-lobster-red text-white hover:bg-red-600 shadow-lg shadow-red-500/20",
  secondary: "bg-slate-deep text-ice-light hover:bg-slate-800",
  outline: "border-2 border-lobster-red text-lobster-red hover:bg-lobster-red hover:text-white"
};

const sizes = {
  sm: "px-4 py-1.5 text-sm",
  md: "px-8 py-3 text-base",
  lg: "px-12 py-4 text-lg tracking-wide"
};

const Element = href ? 'a' : 'button';
---

<Element 
  href={href} 
  class:list={[baseStyles, variants[variant], sizes[size], className]}
>
  <slot />
</Element>